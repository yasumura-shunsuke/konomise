<div class="text-left">
  <h1>レストラン登録画面</h1>
  <%= link_to 'レストラン一覧へ', restaurants_path, class: 'btn btn-lg btn-primary' %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@restaurant) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :name, '店名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :area, 'エリア' %>
        <%= f.text_field :area, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :station, '最寄り駅' %>
        <%= f.text_field :station, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :phone_number, '電話番号' %>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>
  
      <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
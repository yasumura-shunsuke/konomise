<div class="text-left">
  <h1>グループ登録画面</h1>
  <%= link_to 'サービスTOPへ', root_path, class: 'btn btn-lg btn-primary' %>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@group) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :user_id, '管理人' %>
        <%= @user %>
      </div>

      <div class="form-group">
        <%= f.label :sentence, '説明文' %>
        <%= f.text_field :sentence, class: 'form-control' %>
      </div>
  
      <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
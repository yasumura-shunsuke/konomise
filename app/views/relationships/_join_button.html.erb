<% if current_user.join?(group) %>
    <%= form_for(current_user.relationships.find_by(group_id: group.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :group_id, group.id %>
      <%= f.submit 'グループ退出', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :group_id, group.id %>
      <%= f.submit 'グループ参加', class: 'btn btn-primary btn-block' %>
    <% end %>
<% end %>
